<idea-plugin>
    <id>com.github.tom-power.project-view-select</id>
    <name>Project View Select</name>
    <version>0.1.0</version>
    <vendor email="" url="https://github.com/tom-power/project-view-select">Tom Power</vendor>

    <description>
        <![CDATA[
            IntelliJ plugin providing actions to select <a href="https://www.jetbrains.com/help/idea/project-tool-window.html#views">project window views</a>.<br>
        ]]>
    </description>


    <depends>com.intellij.modules.lang</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <action id="ProjectViewProject"
                class="com.github.tompower.projectViewSelect.Project"
                text="Project View Select Project">
        </action>
        <action id="ProjectViewScope"
                class="com.github.tompower.projectViewSelect.Scope"
                text="Project View Select Scope">
        </action>
    </actions>

</idea-plugin>