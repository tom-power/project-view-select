<idea-plugin>
    <id>com.github.tom-power.project-view-select</id>
    <name>Project View Select</name>
    <version>0.1.2</version>
    <vendor email="" url="https://github.com/tom-power/project-view-select">Tom Power</vendor>

    <description>
        <![CDATA[
            IntelliJ plugin providing actions to select <a href="https://www.jetbrains.com/help/idea/project-tool-window.html#views">project tool window views</a>. Can be used with shortcuts to navigate directly between views. Actions to select <code>Project</code> and <code>All Changed Files</code> views available currently.
        ]]>
    </description>

    <depends>com.intellij.modules.lang</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <action id="ProjectViewSelectProject"
                class="com.github.tompower.projectViewSelect.action.SelectProject"
                text="Project View Select Project">
        </action>
        <action id="ProjectViewSelectScopeAllChangedFiles"
                class="com.github.tompower.projectViewSelect.action.SelectScopeAllChangedFiles"
                text="Project View Select Scope All Changed Files">
        </action>
    </actions>

</idea-plugin>