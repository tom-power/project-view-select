<idea-plugin>
    <id>com.github.tom-power.project-view-actions</id>
    <name>Project View Actions</name>
    <version>1.1.2</version>
    <vendor email="" url="https://github.com/tom-power/project-view-actions">Tom Power</vendor>

    <description>
        <![CDATA[
            IntelliJ plugin providing actions for focusing on <a href="https://www.jetbrains.com/help/idea/project-tool-window.html#views">project window views</a>.<br>
        ]]>
    </description>


    <depends>com.intellij.modules.lang</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <action id="ProjectViewProject"
                class="com.github.tompower.projectViewActions.Project"
                text="Project Window View Project">
        </action>
        <action id="ProjectViewScope"
                class="com.github.tompower.projectViewActions.Scope"
                text="Project Window View Scope">
        </action>
    </actions>

</idea-plugin>